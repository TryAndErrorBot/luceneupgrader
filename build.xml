<?xml version="1.0"?>
<project name="lucene3-upgrader" default="jar">

  <target name="compile">
    <mkdir dir="build/classes"/>
    <javac srcdir="src/java" destdir="build/classes"/>
  </target>

  <target name="jar" depends="compile">
    <jar jarfile="build/lucene3-upgrader.jar">
      <fileset dir="build/classes"/>
    </jar>
  </target>

  <target name="clean">
    <delete dir="build"/>
  </target>
</project>
